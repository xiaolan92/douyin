page {
  height: 100%;
  background: #000000;
}

.root {
  width: 100%;
  height: 100%;
  background-color: #000000;
}

swiper {
  width: 100%;
  height: 100%;
}

swiper-item {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

swiper-item .action {
  position: absolute;
  bottom: 480rpx;
  right: 24rpx;
}

.action .wrap {
  color: #FFFFFF;
  font-size: 28rpx;
  margin-bottom: 36rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.action-btn {
  width: 62rpx;
  margin-bottom: 8rpx;
}

swiper-item .info {
  font-size: 14px;
  color:#FFFFFF;
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: auto;
  padding: 0 24rpx;
  box-sizing: border-box;
}

swiper-item .header {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 12rpx;
}

swiper-item .header .avatar {
  width: 68rpx;
  height: 68rpx;
  border-radius: 68rpx;
  border: 1px solid #FFFFFF;
  margin-right: 20rpx;
}

.content {
  font-size: 28rpx;
  margin-bottom: 18rpx;
}

.checkBtn {
  width: 50%;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 8rpx;
  border: 1px solid #FFFFFF;
  margin: 0 auto;
}

swiper video {
  width: 100%;
}